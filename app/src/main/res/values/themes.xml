<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Mode Theme - iOS Style -->
    <style name="Base.Theme.DojoMovie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors (Light Mode) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors (Light Mode) -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors (Light Mode) -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error Colors (Light Mode) -->
        <item name="colorError">@color/accent_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar (Light Mode) -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar (Light Mode) -->
        <item name="android:navigationBarColor">@color/surface</item>

        <!-- Light Mode Window -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.DojoMovie" parent="Base.Theme.DojoMovie" />

    <!-- Button Styles -->
    <style name="DojoMovie.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Card Styles -->
    <style name="DojoMovie.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="DojoMovie.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/border</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Text Styles -->
    <style name="DojoMovie.Text.LargeTitle">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="DojoMovie.Text.Title1">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="DojoMovie.Text.Title2">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="DojoMovie.Text.Title3">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="DojoMovie.Text.Headline">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="DojoMovie.Text.Body">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="DojoMovie.Text.Callout">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="DojoMovie.Text.Subhead">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="DojoMovie.Text.Footnote">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="DojoMovie.Text.Caption1">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="DojoMovie.Text.Caption2">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>
</resources>