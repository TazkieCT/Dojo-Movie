<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Film Cover with Play Button Overlay -->
        <androidx.cardview.widget.CardView
            android:id="@+id/coverContainer"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageFilmCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/border_light"
                android:contentDescription="Film Cover" />

            <!-- Play Button Overlay -->
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    android:contentDescription="Play" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <!-- Film Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/coverContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/coverContainer">

            <!-- Film Title -->
            <TextView
                android:id="@+id/textFilmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Film Title"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Genre Tag -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action"
                    android:textSize="10sp"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

            </androidx.cardview.widget.CardView>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" (120 reviews)"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/textFilmPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 75.000"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonWatchNow"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Buy Now"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- New Release Badge (conditional) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/newBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-8dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/accent_success"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="@+id/coverContainer"
            app:layout_constraintEnd_toEndOf="@+id/coverContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>