<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Movie Poster -->
        <androidx.cardview.widget.CardView
            android:id="@+id/posterContainer"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/border_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageFilmCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Movie Poster" />

        </androidx.cardview.widget.CardView>

        <!-- Movie Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/posterContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/posterContainer">

            <!-- Movie Title -->
            <TextView
                android:id="@+id/textFilmTitle"
                style="@style/DojoMovie.Text.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Genre/Year Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action • 2024"
                style="@style/DojoMovie.Text.Caption1"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    style="@style/DojoMovie.Text.Caption1"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/textFilmPrice"
                style="@style/DojoMovie.Text.Title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 75.000"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Buy Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBuyNow"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Buy"
            android:textSize="15sp"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:minWidth="60dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>