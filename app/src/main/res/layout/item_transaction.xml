<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Film Title -->
        <TextView
            android:id="@+id/textViewTransactionFilmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Film Price per item -->
        <TextView
            android:id="@+id/textViewTransactionFilmPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price per item: Rp 0"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/textViewTransactionQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 0"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/textViewTransactionTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: Rp 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>

</androidx.cardview.widget.CardView>